ARG STEAMCMD_TAG=latest
FROM encoren1/steamcmd:${STEAMCMD_TAG}

ARG STEAM_USER=anonymous
ARG STEAMCMD_TAG=latest
ARG STEAM_PASSWORD
ARG APPID
ARG APPNAME
ARG DRY_RUN false

ENV APPID $APPID
ENV APPNAME $APPNAME
ENV STEAM_USER $STEAM_USER
ENV STEAM_PASSWORD $STEAM_PASSWORD
ENV DRY_RUN $DRY_RUN

COPY install_appid /bin/install_appid
RUN /bin/install_appid

COPY init_scripts/* /bin/
