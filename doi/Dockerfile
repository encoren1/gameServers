ARG DOI_BASE_TAG=latest
FROM doi-base:${DOI_BASE_TAG}

ENV APP_SRCDS_FLAGS ""
ENV APP_SERVER_PORT 27019
ENV APP_SERVER_MAXPLAYERS 24
ENV APP_SERVER_MAP ortona
ENV APP_SERVER_NAME doiServer
ENV APP_SERVER_PASSWORD serverpassword
ENV APP_SERVER_RCONPASSWORD rconpassword
ENV USE_SRCDS true

EXPOSE ${APP_SERVER_PORT}
EXPOSE ${APP_SERVER_PORT}/udp

CMD ["/bin/run_server"]