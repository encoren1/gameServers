ARG INSURGENCY_BASE_TAG=latest
FROM encoren1/gameserver:insurgency-${INSURGENCY_BASE_TAG}

ENV APP_SRCDS_FLAGS ""
ENV APP_SERVER_PORT 27018
ENV APP_SERVER_MAXPLAYERS 24
ENV APP_SERVER_MAP market_coop
ENV APP_SERVER_NAME insurgencyServer
ENV APP_SERVER_PASSWORD serverpassword
ENV APP_SERVER_RCONPASSWORD rconpassword
ENV USE_SRCDS true

EXPOSE ${APP_SERVER_PORT}
EXPOSE ${APP_SERVER_PORT}/udp

CMD ["/bin/run_server"]
